<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_See_More"
    android:background="#F0F5F9">


    <!-- ALLSTUDY Title -->
    <TextView
        android:id="@+id/title_all_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/all_study"
        android:textSize="40sp"
        android:fontFamily="@font/product_sans_bold" />

    <ImageButton
        android:id="@+id/edit_profile_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/user_profile"
        android:src="@drawable/edit_profile_button"
        android:background="#F0F5F9" />

    <!-- Subtitle for list of servers -->
    <TextView
        android:id="@+id/list_of_servers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_all_study"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="@string/list_of_servers"
        android:textSize="25sp"
        android:fontFamily="@font/product_sans_bold" />

    <!-- Server Information Box -->
    <RelativeLayout
        android:id="@+id/server_box_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_of_servers"
        android:layout_centerHorizontal="true">

        <!-- Background Image for Server Box -->
        <ImageView
            android:id="@+id/rectangle_black_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:importantForAccessibility="no"
            android:src="@drawable/rectangle_black" />

        <!-- Active Server Label -->

        <!-- Computer Science Label -->
        <TextView
            android:id="@+id/active_server_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/active_server"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Section Bar -->
        <TextView
            android:id="@+id/section_name_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/active_server_first"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="@string/computer_science"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Server Image Placeholder -->
        <ImageView
            android:id="@+id/server_picture_1"
            android:layout_width="126dp"
            android:layout_height="127dp"
            android:layout_below="@id/active_server_first"
            android:layout_marginTop="0dp"
            android:layout_marginStart="210dp"
            android:contentDescription="@string/server_picture"
            android:src="@drawable/squarestroke" />

        <!-- Join Now Button -->
        <Button
            android:id="@+id/join_now_button_1"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_below="@id/section_name_first"
            android:layout_marginTop="35dp"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/join_now"
            android:textColor="@color/black" />

    </RelativeLayout>

    <!-- Server Information Box -->
    <RelativeLayout
        android:id="@+id/server_box_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/server_box_1"
        android:layout_centerHorizontal="true">

        <!-- Background Image for Server Box -->
        <ImageView
            android:id="@+id/rectangle_black_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:importantForAccessibility="no"
            android:src="@drawable/rectangle_black" />

        <!-- Active Server Label -->

        <!-- Computer Science Label -->
        <TextView
            android:id="@+id/active_server_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/active_server"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Section Bar -->

        <!-- Server Image Placeholder -->

        <TextView
            android:id="@+id/section_name_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/active_server_second"
            android:layout_marginStart="6dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="@string/information_technology"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Join Now Button -->
        <ImageView
            android:id="@+id/server_picture_2"
            android:layout_width="126dp"
            android:layout_height="127dp"
            android:layout_below="@id/active_server_second"
            android:layout_marginStart="215dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/server_picture"
            android:src="@drawable/squarestroke" />

        <Button
            android:id="@+id/join_now_button_2"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_below="@id/section_name_second"
            android:layout_marginTop="35dp"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/join_now"
            android:textColor="@color/black" />

    </RelativeLayout>


    <!-- Bottom Taskbar -->
    <ImageView
        android:id="@+id/tab_below_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/task_bar"
        android:src="@drawable/tab_below" />

    <!-- Taskbar Notification Button -->
    <ImageButton
        android:id="@+id/notification_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/tab_below_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/server_notification"
        android:src="@drawable/notification_button"
        android:background="@android:color/transparent"
        android:backgroundTint="#313231" />

    <!-- Taskbar Join Button -->
    <ImageButton
        android:id="@+id/join_server_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignTop="@id/tab_below_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="-4dp"
        android:contentDescription="@string/create_server_button"
        android:src="@drawable/join_server_button"
        android:background="@android:color/transparent"
        android:backgroundTint="#313231" />

    <!-- Taskbar Favorite Button -->
    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/tab_below_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/favorite_button"
        android:src="@drawable/favorite_button"
        android:backgroundTint="#313231" />


</RelativeLayout>