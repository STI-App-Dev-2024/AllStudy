<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageAllStudy">

    <TextView
        android:id="@+id/all_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/all_study"
        android:textSize="40sp"
        android:fontFamily="@font/product_sans_bold" />

    <ImageButton
        android:id="@+id/generic_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/user_profile"
        android:src="@drawable/generic_avatar"/>

    <TextView
        android:id="@+id/list_of_servers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/all_study"
        android:text="@string/list_of_servers"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:fontFamily="@font/product_sans_bold" />

    <RelativeLayout
        android:id="@+id/server_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_of_servers"
        android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:importantForAccessibility="no"
        android:src="@drawable/rectangle_6" />

    <TextView
        android:id="@+id/active_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="@string/active_server"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/product_sans_bold" />

        <TextView
            android:id="@+id/computer_science"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/computer_science"
            android:layout_below="@+id/active_server"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:textSize="22sp"
            android:fontFamily="@font/product_sans_bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/server_picture"
            android:src="@drawable/squarestroke" />

        <Button
        android:id="@+id/join_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/product_sans_bold"
        android:text="@string/join_now"
        android:layout_marginTop="35dp"
        android:layout_marginStart="55dp"
        android:textColor="@color/black"
        android:layout_below="@id/computer_science"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/more_active_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_active_servers"
        android:textSize="23sp"
        android:layout_below="@+id/server_box"
        android:fontFamily="@font/product_sans_bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#F0EFEF"
        android:elevation="10dp"
        android:text="@string/see_more"
        android:textColor="#1060FF"
        android:layout_below="@+id/more_active_server" />

    <ImageView
        android:id="@+id/tab_below_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/task_bar"
        android:src="@drawable/tab_below"
        android:layout_alignParentBottom="true" />

        <ImageButton
            android:id="@+id/notification"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/notifications"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/tab_below_image"
            android:contentDescription="@string/server_notification"
            android:backgroundTint="#313231"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/join_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/join_button"
        android:layout_alignTop="@id/tab_below_image"
        android:contentDescription="@string/join_button"
        android:backgroundTint="#313231"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/favorite_button"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tab_below_image"
        android:backgroundTint="#313231"
        android:contentDescription="@string/favorite_button"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="10dp" />


</RelativeLayout>
