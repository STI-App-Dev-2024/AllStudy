<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageAllStudy">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="205dp"
        android:background="@drawable/rectangle_6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp" />

    <ImageView
        android:layout_width="126dp"
        android:layout_height="127dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="218dp"
        android:src="@drawable/squarestroke"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/active_server"
        android:layout_marginTop="200dp"
        android:layout_marginStart="45dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/product_sans_regular"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginStart="50dp"
        android:text="@string/join_now"
        android:fontFamily="@font/product_sans_regular"
        android:textColor="@color/black"
        android:backgroundTint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Science"
        android:layout_marginTop="260dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:shadowColor="@color/white"
        android:fontFamily="@font/product_sans_bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="@string/more_active_servers"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="140dp"
        android:background="@drawable/rectangle"
        android:layout_marginTop="830dp"
        android:backgroundTint="#4c4746" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bell"
        android:layout_marginTop="840dp"
        android:layout_marginStart="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/heart"
        android:layout_marginStart="330dp"
        android:layout_marginTop="835dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/generic_avatar" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:text="ALLSTUDY"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="35sp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/list_of_servers"
        android:textSize="25sp"
        android:textColor="@color/black"
        />


</RelativeLayout>