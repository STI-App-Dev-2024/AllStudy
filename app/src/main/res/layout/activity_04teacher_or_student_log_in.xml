<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherOrStudentLogIn">


    <ImageView
        android:id="@+id/logonamin"
        android:layout_width="222dp"
        android:layout_height="202dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:src="@drawable/logonamin" />

    <ImageButton
        android:id="@+id/Tnavback"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/navigate_next"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/navigate_next" />

    <TextView
        android:id="@+id/areyoua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/are_you_a"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_below="@+id/logonamin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/areyoua"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp">

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginEnd="70dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ellipse_3" />

        <ImageButton
            android:id="@+id/student"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/schoolboy_at_a_desk"
            android:background="null"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ellipse_3" />

        <ImageButton
            android:id="@+id/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/school_director"
            android:background="null"
            />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="350dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teacher"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="350dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="265dp"/>


</RelativeLayout>