<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_SignUp">

    <ImageView
        android:id="@+id/splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/halfsplash_for_signin_signup"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/login"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:layout_below="@+id/splash"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#313231"
        android:text="@string/log_in"
        android:textSize="20sp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/product_sans_bold"/>

    <Button
        android:id="@+id/signup"
        android:layout_width="294dp"
        android:layout_height="49dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_up"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/circular_stroke"
        android:fontFamily="@font/product_sans_bold" />

    <LinearLayout
        android:id="@+id/termsandcondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_agree_to_the"
        android:fontFamily="@font/product_sans_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_conditions"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/product_sans_bold"
            android:padding="5dp"
            android:textColor="#26198F"/>

    </LinearLayout>


</RelativeLayout>