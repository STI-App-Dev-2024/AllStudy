<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Server_Page"
    android:background="#F0F5F9" >

    <TextView
        android:id="@+id/all_study_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/all_study"
        android:textSize="40sp"
        android:fontFamily="@font/product_sans_bold" />

    <ImageButton
        android:id="@+id/generic_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/user_profile"
        android:src="@drawable/generic_avatar"
        android:background="#F0F5F9" />

    <TextView
        android:id="@+id/computer_science_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_study_title"
        android:text="@string/computer_science"
        android:layout_centerHorizontal="true"
        android:layout_margin="28dp"
        android:textSize="25sp"
        android:fontFamily="@font/product_sans_bold" />
    
    <TextView
        android:id="@+id/app_dev_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/application_development"
        android:layout_below="@+id/computer_science_title"
        android:textSize="18sp"
        android:layout_marginStart="16sp"
        android:fontFamily="@font/product_sans_regular" />

    <ImageView
        android:id="@+id/rectangle_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_dev_title"
        android:src="@drawable/rectangle_server"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/see_more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_activities"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rectangle_server"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/classroom_rules_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_classroom_rules"
        android:layout_below="@+id/see_more_button"
        android:textColor="#582AD9"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp" />

    <ImageButton
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logout_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/classroom_rules_click"
        android:background="@android:color/transparent"
        android:layout_marginTop="43dp"/>


</RelativeLayout>