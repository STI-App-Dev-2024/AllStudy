<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Favorite_Server_Page"
    android:background="#F0F5F9">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_button"
        android:src="@drawable/back_button" />


    <!-- All Study -->
    <TextView
        android:id="@+id/all_study_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/all_study"
        android:textSize="40sp"
        android:fontFamily="@font/product_sans_bold" />

    <ImageButton
        android:id="@+id/edit_profile_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/user_profile"
        android:src="@drawable/edit_profile_button"
        android:background="#F0F5F9" />

    <TextView
        android:id="@+id/favorite_server_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorite_server"
        android:layout_below="@id/all_study_title"
        android:textSize="30sp"
        android:fontFamily="@font/product_sans_bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp" />

    <ImageButton
        android:id="@+id/favorite_server_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite_server_rectangle"
        android:layout_below="@+id/favorite_server_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:id="@+id/favorite_server_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite_server_rectangle"
        android:layout_below="@+id/favorite_server_button_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" />

    <ImageButton
        android:id="@+id/favorite_server_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite_server_rectangle"
        android:layout_below="@+id/favorite_server_button_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" />

    <!-- Bottom Taskbar -->
    <ImageView
        android:id="@+id/tab_below_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/task_bar"
        android:src="@drawable/tab_below" />

    <!-- Taskbar Notification Button -->
    <ImageButton
        android:id="@+id/notification_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/tab_below_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/server_notification"
        android:src="@drawable/notification_button"
        android:background="@android:color/transparent"
        android:backgroundTint="#313231" />

    <!-- Taskbar Join Button -->
    <ImageButton
        android:id="@+id/join_server_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignTop="@id/tab_below_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="-4dp"
        android:contentDescription="@string/join_server_button"
        android:src="@drawable/join_server_button"
        android:background="@android:color/transparent"
        android:backgroundTint="#313231" />

    <!-- Taskbar Favorite Button -->
    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/tab_below_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/favorite_button"
        android:src="@drawable/favorite_button"
        android:backgroundTint="#313231" />

</RelativeLayout>