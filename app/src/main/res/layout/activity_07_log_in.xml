<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/comp"
        android:layout_width="441dp"
        android:layout_height="363dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/allstudyhalf" />

    <Button
        android:id="@+id/navback"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/back_button"
        android:layout_marginStart="4dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/back_button" />

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="360dp"
        android:layout_height="504dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="351dp"
        android:src="@drawable/custom_rectangle" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="386dp"
        android:layout_centerHorizontal="true"
        android:text="@string/log_in"
        android:textSize="30sp"
        android:fontFamily="@font/product_sans_bold"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_below="@+id/sign_in"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_edit_text"
        android:hint="@string/email"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:fontFamily="@font/product_sans_regular"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:autofillHints="Password"
        android:background="@drawable/round_edit_text"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/product_sans_regular"/>

    <Button
        android:id="@+id/buttonsign"
        android:layout_width="280dp"
        android:layout_height="49dp"
        android:layout_below="@id/password"
        android:backgroundTint="#313231"
        android:text="@string/sign_in"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/product_sans_bold"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonsign"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/forgot_passwords"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/product_sans_regular"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dont_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/don_t_have_an_account"
            android:fontFamily="@font/product_sans_regular"/>

        <TextView
            android:id="@+id/signmeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/sign_up"
            android:textColor="#26198F"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/product_sans_bold"/>

    </LinearLayout>



</RelativeLayout>