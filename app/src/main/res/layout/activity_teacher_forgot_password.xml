<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Forgot_Password">


    <ImageView
        android:id="@+id/image_forgot_password"
        android:layout_width="360dp"
        android:layout_height="435dp"
        android:src="@drawable/group_15"
        android:layout_centerHorizontal="true"
        android:importantForAccessibility="no" />

    <ImageView
        android:id="@+id/rectangles"
        android:layout_width="360dp"
        android:layout_height="365dp"
        android:src="@drawable/custom_rectangle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="435dp"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:layout_centerInParent="true"
        android:layout_below="@+id/image_forgot_password"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="30dp"
        android:fontFamily="@font/product_sans_bold"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="325dp"
        android:layout_height="41dp"
        android:autofillHints="emailAddress"
        android:hint="@string/email"
        android:textColorHint="#6A5E5E"
        android:layout_below="@id/forgot_password"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_stroke"
        android:fontFamily="@font/product_sans_regular"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:text="@string/send"
        android:layout_centerInParent="true"
        android:layout_below="@id/email"
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/product_sans_bold"
        android:backgroundTint="@color/black" />

    <LinearLayout
        android:id="@+id/circlesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_button"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dont_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/don_t_have_an_account"
            android:fontFamily="@font/product_sans_regular"/>

        <TextView
            android:id="@+id/signup_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/Sign_Up"
            android:textColor="#26198F"
            android:padding="5dp"
            android:fontFamily="@font/product_sans_bold"/>

    </LinearLayout>


</RelativeLayout>