<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signin_SignUp">

    <ImageView
        android:id="@+id/splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/halfsplash_for_signin_signup" />

    <Button
        android:id="@+id/signin"
        android:layout_width="270dp"
        android:layout_height="59dp"
        android:layout_below="@+id/splash"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="#313231"
        android:text="@string/sign_in"
        android:textSize="20sp" />

    <FrameLayout
        android:id="@+id/frame_signin"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/signin"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circular_stroke"
            android:elevation="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/sign_up"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_gravity="center" />
</FrameLayout>


    </RelativeLayout>