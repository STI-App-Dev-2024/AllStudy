<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn_or_SignUp">

    <ImageView
        android:id="@+id/splash_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/halfsplash_for_signin_signup"
        android:layout_centerHorizontal="true"
        android:importantForAccessibility="no" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:text="@string/log_in"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/splash_screen"
        android:backgroundTint="#313231"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/product_sans_bold"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="294dp"
        android:layout_height="49dp"
        android:text="@string/sign_up"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="13dp"
        android:textColor="#000000"
        android:background="@drawable/circular_stroke"
        android:fontFamily="@font/product_sans_bold" />

    <LinearLayout
        android:id="@+id/terms_and_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_button"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

    <CheckBox
        android:id="@+id/agree_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_agree_to_the"
        android:fontFamily="@font/product_sans_regular"/>

        <TextView
            android:id="@+id/terms_and_condition_click"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/terms_conditions"
            android:textColor="#26198F" />

    </LinearLayout>


</RelativeLayout>