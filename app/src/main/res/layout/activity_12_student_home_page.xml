<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Home_Page"
    android:background="#F0F5F9">


    <!-- ALLSTUDY Title -->
    <TextView
        android:id="@+id/all_study_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/all_study"
        android:textSize="40sp"
        android:fontFamily="@font/product_sans_bold" />

    <ImageButton
        android:id="@+id/edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/user_profile"
        android:src="@drawable/student_profile"
        android:background="#F0F5F9" />

    <!-- Subtitle for list of servers -->
    <TextView
        android:id="@+id/list_of_servers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/all_study_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="@string/list_of_servers"
        android:textSize="25sp"
        android:fontFamily="@font/product_sans_bold" />


    <!-- Server Information Box -->
    <RelativeLayout
        android:id="@+id/server_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_of_servers"
        android:layout_centerHorizontal="true">


        <!-- Background Image for Server Box -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:importantForAccessibility="no"
            android:src="@drawable/rectangle_black" />

        <!-- Active Server Label -->

        <!-- Computer Science Label -->
        <TextView
            android:id="@+id/active_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/active_server"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <!-- Section Bar -->
        <TextView
            android:id="@+id/section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/active_server"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/computer_science"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <!-- Server Image Placeholder -->
        <ImageView
            android:id="@+id/server_picture"
            android:layout_width="126dp"
            android:layout_height="127dp"
            android:layout_below="@id/active_server"
            android:layout_marginTop="0dp"
            android:layout_marginStart="210dp"
            android:contentDescription="@string/server_picture"
            android:src="@drawable/squarestroke" />


        <!-- Join Now Button -->
        <Button
            android:id="@+id/join_now_button"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_below="@id/section_name"
            android:layout_marginTop="35dp"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/join_now"
            android:textColor="@color/black" />

    </RelativeLayout>


    <!-- More Active Servers Label -->
    <TextView
        android:id="@+id/more_active_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/server_box"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/more_active_servers"
        android:textSize="23sp"
        android:fontFamily="@font/product_sans_bold" />

    <!--Sliders for more active servers-->

    <!-- HorizontalScrollView for scrolling items horizontally -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_active_server"
        android:layout_marginTop="8dp"
        android:contentDescription="Scroll horizontally to view more items"
        android:scrollbars="none"
        tools:ignore="HardcodedText"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <!-- Placeholder views for the items -->

            <ImageButton

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/code" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/laptop" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/mech" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/art" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/books" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/darker_gray" />

            <!-- Add more views as needed -->

        </LinearLayout>
    </HorizontalScrollView>


    <!-- See More Button -->
    <Button
        android:id="@+id/see_more_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/more_active_server"
        android:backgroundTint="#302E2E"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:text="@string/see_more"
        android:textSize="18sp"
        android:fontFamily="@font/product_sans_bold"
        android:textColor="#FFFF" />

    <!-- Bottom Taskbar -->
    <ImageView
        android:id="@+id/tab_below_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/task_bar"
        android:src="@drawable/tab_below" />


    <!-- Taskbar Notification Button -->
    <ImageButton
        android:id="@+id/notification_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/tab_below_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/server_notification"
        android:src="@drawable/notification_button"
        android:backgroundTint="#313231" />

    <TextView
        android:id="@+id/notification_badge"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginVertical="690dp"
        android:layout_marginHorizontal="45dp"
        android:background="@drawable/circle_red"
        android:fontFamily="@font/product_sans_bold"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>


    <!-- Taskbar Join Button -->
    <ImageButton
        android:id="@+id/join_server_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignTop="@id/tab_below_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="-4dp"
        android:contentDescription="@string/join_server_button"
        android:src="@drawable/join_server_button"
        android:backgroundTint="#313231" />


    <!-- Taskbar Favorite Button -->
    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/tab_below_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/favorite_button"
        android:src="@drawable/favorite_button"
        android:backgroundTint="#313231" />


</RelativeLayout>
