<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Enable_Apps_Page"
    android:background="#F0F5F9">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_button"
        android:src="@drawable/back_button" />

    <TextView
        android:id="@+id/all_study_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/all_study"
        android:textSize="40sp"
        android:fontFamily="@font/product_sans_bold"/>

    <TextView
        android:id="@+id/enable_apps_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_apps"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/all_study_title"
        android:textSize="23sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/product_sans_bold" />

    <ImageView
        android:id="@+id/enable_apps_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enable_apps_title"
        android:src="@drawable/enable_apps_rectangle"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/add_apps_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_apps_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="-6dp"
        android:backgroundTint="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_apps"
        android:layout_below="@+id/add_apps_button"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:fontFamily="@font/product_sans_bold" />

    <Button
        android:id="@+id/create_server_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_server"
        android:layout_below="@id/enable_apps_rectangle"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#313231"
        android:layout_marginTop="25dp" />

    <LinearLayout
        android:id="@+id/youtubeLayout"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/enable_apps_title"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:gravity="start">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/youtube"
            android:layout_marginEnd="8dp" />

        <!-- TextView for "Enable App" -->

        <!-- Switch for Enable/Disable -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="Youtube"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/appToggleSwitch"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginVertical="5dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/facebookLayout"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/youtubeLayout"
    android:layout_marginHorizontal="25dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:gravity="start">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/facecbook"
        android:layout_marginEnd="8dp" />

    <!-- TextView for "Facebook" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/product_sans_bold"
        android:text="Facebook"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/facebookToggleSwitch"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_marginVertical="5dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />
</LinearLayout>

</RelativeLayout>