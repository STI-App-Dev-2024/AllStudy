<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignmeIn">

    <ImageView
        android:id="@+id/comp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:src="@drawable/mypc" />
    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/logonamin"
        android:layout_alignTop="@id/comp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="50dp"
        
        />

    <ImageButton
        android:id="@+id/navback"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/navigate_next"
        android:src="@drawable/navigate_next" />

    <ImageView
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-227dp"
        android:src="@drawable/custom_rectangle" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="319dp"
        android:text="@string/sign_in"
        android:textSize="30sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/email"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="254dp"
        android:hint="@string/email"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:background="@drawable/round_edit_text" />

    <EditText
        android:id="@+id/password"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="198dp"
        android:background="@drawable/round_edit_text"
        android:hint="@string/password"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonsign"
        android:layout_width="294dp"
        android:layout_height="49dp"
        android:text="@string/sign_in"
        android:textStyle="normal"
        android:textSize="20sp"
        android:backgroundTint="#313231"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="116dp" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-110dp"
        android:text="@string/forgot_passwords"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonsign"/>


</RelativeLayout>