<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_See_Classroom_Rules_Page_2"
    android:background="#F0F5F9">

    <TextView
        android:id="@+id/all_study_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/all_study"
        android:textSize="40sp"
        android:fontFamily="@font/product_sans_bold" />

    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_study_title"
        android:text="@string/information_technology"
        android:layout_centerHorizontal="true"
        android:layout_margin="28dp"
        android:textSize="25sp"
        android:fontFamily="@font/product_sans_bold" />

    <TextView
        android:id="@+id/subject_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intermediate_mobile_programming"
        android:layout_below="@+id/section_title"
        android:textSize="18sp"
        android:layout_marginStart="16sp"
        android:fontFamily="@font/product_sans_bold" />

    <ImageView
        android:id="@+id/rectangle_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject_title"
        android:src="@drawable/rectangle_server"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/activities_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activities"
        android:layout_below="@+id/subject_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:textSize="25sp"
        android:fontFamily="@font/product_sans_bold" />

    <TextView
        android:id="@+id/due_today_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/due_today"
        android:layout_below="@+id/activities_list"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/product_sans_bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/due_this_month"
        android:layout_below="@+id/due_today_list"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/see_participants_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_participants"
        android:layout_below="@+id/rectangle_server"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/see_classroom_rules_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_classroom_rules"
        android:layout_below="@+id/see_participants_button"
        android:textColor="#582AD9"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp" />

    <ImageButton
        android:id="@+id/leave_server_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/see_participants_button"
        android:contentDescription="@string/logout_button"
        android:src="@drawable/logout_button"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:id="@+id/edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/user_profile"
        android:src="@drawable/student_profile"
        android:background="#F0F5F9" />

</RelativeLayout>