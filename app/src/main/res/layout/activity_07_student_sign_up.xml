<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".Student_SignUp">

    <ImageView
        android:id="@+id/allstudyhalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/allstudyhalfbg" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/back_button"
        android:src="@drawable/back_button"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="360dp"
        android:layout_height="555dp"
        android:layout_below="@id/allstudyhalf"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/signup_box"
        android:src="@drawable/custom_rectangle" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allstudyhalf"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="@string/student_sign_up"
        android:textSize="30sp"
        android:fontFamily="@font/product_sans_bold" />

    <EditText
        android:id="@+id/full_name"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_below="@+id/signup"
        android:background="@drawable/round_edit_text"
        android:hint="@string/full_name"
        android:textColorHint="#6A5E5E"
        android:autofillHints="First Name"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:fontFamily="@font/product_sans_regular"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_below="@+id/full_name"
        android:layout_centerHorizontal="true"
        android:hint="@string/email"
        android:textColorHint="#6A5E5E"
        android:autofillHints="Last Name"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/product_sans_regular"/>

    <EditText
        android:id="@+id/student_id"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:hint="@string/student_id"
        android:textColorHint="#6A5E5E"
        android:autofillHints="Student ID"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/product_sans_regular"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_below="@+id/student_id"
        android:layout_centerHorizontal="true"
        android:hint="@string/password"
        android:textColorHint="#6A5E5E"
        android:autofillHints="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/product_sans_regular"/>

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:hint="@string/confirm_password"
        android:textColorHint="#6A5E5E"
        android:autofillHints="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/product_sans_regular"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_below="@+id/confirm_password"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#313231"
        android:text="@string/sign_up"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:fontFamily="@font/product_sans_bold"/>


</RelativeLayout>